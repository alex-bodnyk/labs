alfavit = 'ABCDEFGHJKLMNOPQRSTUVWXYZАБВГДЕЖЗИЙКЛМНОПРСТУФХЦЧШЩЬЄЮЯ023456789'
message = input("Enter a message to code: ").upper()
n = 1
result = ''
if message == " ":
    for i in message:
        string = alfavit.find(i)
        ivan = string + n
    for i in alfavit:
        result += alfavit[ivan]
    else:
        result += i
print(result)
message = input("Enter a message to uncode: ").upper()
if message == " ":
    for i in message:
        string = alfavit.find(i)
        ivan = string - n
    for i in alfavit:
        result += alfavit[ivan]
    else:
        result += i
else:
    print(result)
