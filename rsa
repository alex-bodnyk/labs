alfavit = 'ABCDEFGHJKLMNOPQRSTUVWXYZАБВГДЕЖЗИЙКЛМНОПРСТУФХЦЧШЩЬЄЮЯ023456789'
message = input("Enter a message to code: ").upper()
n = 1
result = ''
if message == " ":
    for i in message:
        string = alfavit.find(i)
        ivan = string + n
    for i in alfavit:
        result += alfavit[ivan]
    else:
        result += i
print(result)
message = input("Enter a message to uncode: ").upper()
if message == " ":
    for i in message:
        string = alfavit.find(i)
        ivan = string - n
    for i in alfavit:
        result += alfavit[ivan]
    else:
        result += i
else:
    print(result)


alfavit = 'ABCDEFGHIJKLMNOPQRSTUVWXYZABCDEFGHIJKLMNOPQRSTUVWXYZЯ' \
          'АБВГДЕЄЖЗИІЇЙКЛМНОПРСТУФХЦЧШЩЬЮЯАБВГДЕЄЖЗИІЇЙКЛМНОПРСТУФХЦЧШЩЬЮЯ' \
          '1234567890*/'
key = int(1)
while True:
    message = input("Повідомлення для шифрування: ").upper()
    resolt = ''

    for i in message:
        mesto = alfavit.find(i)
        new_mesto = mesto + key
        if i in alfavit:
            resolt += alfavit[new_mesto]
        else:
            resolt += i


    print(resolt.lower())
